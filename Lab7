#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void fill(int n, int k, int a[n][k])
{
    int i, j;
    for (i = 0; i < n; i++)
        for(j = 0; j<k; j++)
            a[i][j] = rand () % 101;
    
}

int sled(int n, int k, int a[n][k])
{
    int i, j, sled = 0;
    for (i = 0; i < n; i++)
        for(j = 0; j<k; j++)
        if (i == j){
            if(i==0){
            sled+=a[i][j+1] + a[i][j+2];
            }
            else if (i==n-1){
                sled+=a[i][j-1] + a[i][j-2];
            }
            else{
                sled+=a[i][j-1] + a[i][j+1];
            }
             sled += a[i][j];
        }
        
    return sled;
}
void transponse(int n, int k, int a[n][k]){
    int i, j;
    for (i = 0; i < n; i++)
        for(j = 0; j<k; j++)
        if (i != j){
            a[i][j]=a[j][i];
        }
}
void zero(int n, int k, int a[n][k]){
    int i, j;
    for (i = 0; i < n; i++)
        for(j = 0; j<k; j++)
        if (i != j){
            a[i][j]=0;
        }
        
    
}
int main()
{
    srand(time(NULL));
    int A, sld, num;
    printf("Квадратная матрица \n");
    printf("Введите количество строк и столбцов. А -> ");
    scanf("%d", &A);
    //B = A;
    int a[A][A];
    fill(A, A, a);
    sld = sled(A, A, a);
    int i, j;
    for (i = 0; i < A; i++){
        for(j = 0; j<A; j++){
            printf("%4d", a[i][j]);
        }
        printf("\n");
    }
    printf("Введите число -> ");
    scanf("%d", &num);
    printf("сумма элементов главной диагонали и двух соседних = %d \n", sld);
    if (num<sld){
        for (i = 0; i < A; i++){
            for(j = 0; j<A; j++){
                // if (i != j){
                printf("%4d", a[j][i]);
            }
            printf("\n");
        }
    }
    else{
        zero(A, A, a);
        for (i = 0; i < A; i++){
            for(j = 0; j<A; j++){
                printf("%4d", a[i][j]);
        }
        printf("\n");
    }
    }
    
    return 0;
}
